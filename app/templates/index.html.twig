{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="rounded-md bg-green-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-green-800">{{ message }}</h3>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">{{ message }}</h3>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="bg-white">
        <main class="isolate">

            <div class="text-center">
                <img src="{{ asset('images/drawn-elephpant.png') }}" class="mx-auto mt-20 w-1/2 lg:w-1/5" alt="Sylius elePHPant"/>
            </div>

            <!-- Hero section -->
            <div class="relative pt-3">
                <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
                    <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#30B99D] to-[#30B99D] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
                </div>
                <div class="py-10">
                    <div class="mx-auto max-w-7xl px-6 lg:px-8">
                        <div class="mx-auto max-w-2xl text-center">
                            <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Get your very own Sylius elePHPant!</h1>

                            {# {% include "component/countdown.html.twig" %} #}
                            <div class="mx-auto mt-16">
                                <button class="text-4xl font-bold px-12 py-8 bg-emerald-400 hover:bg-emerald-500 text-white font-bold border-b-4 border-emerald-700 hover:border-emerald-700 rounded">
                                  <a href="https://www.kickstarter.com/projects/734475887/sylius-elephpant">
                                    Get yours now!
                                  </a>
                                </button>        
                            </div>
                        </div>

                        <!-- Logo cloud -->
                        <div class="mx-auto max-w-7xl px-6 lg:px-8 mt-20">
                            <h1 class="mt-4 text-3xl font-bold tracking-tight text-slate-500 sm:text-5xl text-center">Brought to you by</h1>
                            <div class="flex flex-cols-2 lg:w-2/3 sm:w-full mx-auto mt-10 gap-3">
                                <img class="w-1/2 mt-2" src="https://monsieurbiz.com/logo.svg" alt="Monsieur Biz">
                                <img class="w-1/2" src="{{ asset('images/sylius.svg') }}" alt="Sylius">
                            </div>
                        </div>
                        <div class="mt-12 flow-root">


                            <!-- Form -->
                            {# <div class="bg-white py-10">
                                <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
